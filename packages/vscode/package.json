{
  "name": "@csvw-rdf-convertor/vscode",
  "version": "1.0.1",
  "type": "module",
  "main": "./dist/extension.js",
  "module": "./dist/extension.js",
  "types": "./dist/index.d.ts",
  "displayName": "CSVW-RDF Convertor",
  "description": "Bidirectional CSVW to RDF convertor and validator",
  "icon": "resources/favicon.png",
  "publisher": "JakubYaghob",
  "repository": {
    "type": "git",
    "url": "https://github.com/S0ft1/CSVW-RDF-convertor"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "nx": {
    "sourceRoot": "packages/vscode/src",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/vscode/dist",
          "main": "packages/vscode/src/extension.ts",
          "tsConfig": "packages/vscode/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/extension.js",
      "default": "./dist/extension.js"
    }
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11",
    "@csvw-rdf-convertor/core": "1.0.1",
    "csv": "^6.3.11",
    "@rdfjs/types": "^2.0.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "csvwrdfconvertor.createConversion",
        "title": "Add Conversion",
        "icon": "$(add)"
      },
      {
        "command": "csvwrdfconvertor.openConversionFields",
        "title": "Open Conversion Fields",
        "icon": "$(folder-opened)"
      },
      {
        "command": "csvwrdfconvertor.closeConversionFields",
        "title": "Close Conversion Fields",
        "icon": "$(close)"
      },
      {
        "command": "csvwrdfconvertor.convertCsvwToRdf",
        "title": "Convert CSVW to RDF",
        "icon": "$(arrow-right)"
      },
      {
        "command": "csvwrdfconvertor.convertRdfToCsvw",
        "title": "Convert RDF to CSVW",
        "icon": "$(arrow-left)"
      },
      {
        "command": "csvwrdfconvertor.validateSpecific",
        "title": "Validate Specific",
        "icon": "$(check)"
      },
      {
        "command": "csvwrdfconvertor.addAnotherInput",
        "title": "Add Another Input",
        "icon": "$(add)"
      },
      {
        "command": "csvwrdfconvertor.deleteConversion",
        "title": "Delete Conversion",
        "icon": "$(trash)"
      },
      {
        "command": "csvwrdfconvertor.toggleTemplateIRIs",
        "title": "Toggle Template IRIs",
        "icon": "$(link)"
      },
      {
        "command": "csvwrdfconvertor.toggleMinimalMode",
        "title": "Toggle Minimal Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "csvwrdfconvertor.clearRedUnderlines",
        "title": "Clear Red Underlines",
        "icon": "$(clear-all)"
      },
      {
        "command": "csvwrdfconvertor.convertCurrentWindow",
        "title": "Convert Current Window",
        "icon": "$(gear)"
      },
      {
        "command": "csvwrdfconvertor.refreshActions",
        "title": "Refresh Actions",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "csvw-rdf-convertor",
          "title": "CSVW-RDF Convertor",
          "icon": "resources/favicon.svg"
        }
      ]
    },
    "views": {
      "csvw-rdf-convertor": [
        {
          "id": "csvw-rdf-actions",
          "name": "Conversions list",
          "type": "tree",
          "icon": "resources/favicon.svg"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "csvwrdfconvertor.convertCurrentWindow",
          "when": "resourceExtname == .csv || resourceExtname == .rdf || resourceExtname == .ttl || resourceExtname == .jsonld || resourceExtname == .json || resourceExtname == .nt || resourceExtname == .nq ||resourceExtname == .trig",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "csvwrdfconvertor.deleteConversion",
          "when": "view == csvw-rdf-actions && viewItem == conversion",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  }
}
