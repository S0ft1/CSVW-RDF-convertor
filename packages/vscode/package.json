{
  "name": "csvw-rdf-convertor",
  "displayName": "CSVW RDF Converter",
  "description": "Convert between CSV-W and RDF formats with full support for W3C CSVW specification",
  "version": "1.1.0",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publisher": "jakubyaghob",
  "engines": {
    "vscode": "^1.102.0"
  },
  "nx": {
    "sourceRoot": "packages/vscode/src",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/vscode/dist",
          "main": "packages/vscode/src/index.ts",
          "tsConfig": "packages/vscode/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      }
    }
  },
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/S0ft1/CSVW-RDF-convertor"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "@csvw-rdf-convertor/core": "1.1.0",
    "@swc/helpers": "~0.5.11",
    "csv": "^6.3.11",
    "n3": "^1.23.1"
  },
  "contributes": {
    "commands": [
      {
        "command": "csvwrdfconvertor.addNewConversion",
        "title": "Add Conversion",
        "icon": "$(add)"
      },
      {
        "command": "csvwrdfconvertor.openConversionFields",
        "title": "Open Conversion Fields",
        "icon": "$(folder-opened)"
      },
      {
        "command": "csvwrdfconvertor.closeConversionFields",
        "title": "Close Conversion Fields",
        "icon": "$(close)"
      },
      {
        "command": "csvwrdfconvertor.convertCsvwToRdf",
        "title": "Convert CSVW to RDF",
        "icon": "$(arrow-right)"
      },
      {
        "command": "csvwrdfconvertor.convertRdfToCsvw",
        "title": "Convert RDF to CSVW",
        "icon": "$(arrow-left)"
      },
      {
        "command": "csvwrdfconvertor.validateSpecific",
        "title": "Validate Specific",
        "icon": "$(check)"
      },
      {
        "command": "csvwrdfconvertor.addAnotherInput",
        "title": "Add Another Input",
        "icon": "$(add)"
      },
      {
        "command": "csvwrdfconvertor.deleteConversion",
        "title": "Delete Conversion",
        "icon": "$(trash)"
      },
      {
        "command": "csvwrdfconvertor.toggleTemplateIRIs",
        "title": "Toggle Template IRIs",
        "icon": "$(link)"
      },
      {
        "command": "csvwrdfconvertor.toggleMinimalMode",
        "title": "Toggle Minimal Mode",
        "icon": "$(list-tree)"
      },
      {
        "command": "csvwrdfconvertor.clearRedUnderlines",
        "title": "Clear Red Underlines",
        "icon": "$(clear-all)"
      },
      {
        "command": "csvwrdfconvertor.convertCurrentWindow",
        "title": "Convert Current Window",
        "icon": "$(gear)"
      },
      {
        "command": "csvwrdfconvertor.refreshActions",
        "title": "Refresh Actions",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "csvw-rdf-converter",
          "title": "CSVW RDF Converter",
          "icon": "$(file-code)"
        }
      ]
    },
    "views": {
      "csvw-rdf-converter": [
        {
          "id": "csvw-rdf-actions",
          "name": "Actions",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "csvwrdfconvertor.convertCurrentWindow",
          "when": "resourceExtname == .csv || resourceExtname == .rdf || resourceExtname == .ttl || resourceExtname == .jsonld",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "csvwrdfconvertor.deleteConversion",
          "when": "view == csvw-rdf-actions && viewItem == conversion",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typedoc": "^0.28.11",
    "typescript": "^5.9.2"
  }
}
